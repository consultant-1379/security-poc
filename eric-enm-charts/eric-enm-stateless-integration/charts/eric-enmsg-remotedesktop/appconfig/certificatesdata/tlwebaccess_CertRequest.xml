<?xml version="1.0" encoding="UTF-8"?>
<applications xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="CertificateRequest.xsd">
    <application>
        <certificates>
            <certificate>
                <certificatechain>true</certificatechain>
                <tbscertificate>
                    <subject>
                        <entityname>##hostname##_TLWEBACCESS_SERVER</entityname>
                        <distinguishname>CN=##hostname##</distinguishname>
                    </subject>
                </tbscertificate>
                <endentityprofilename>ENM_System_SBI_TPFC_EP</endentityprofilename>
                <keystore>
                    <base64keystore>
                        <storealias>tlwebaccess</storealias>
                        <keyfilelocation>/opt/thinlinc/etc/tlwebaccess/server.key</keyfilelocation>
                        <certificatefilelocation>/opt/thinlinc/etc/tlwebaccess/server.crt</certificatefilelocation>
                    </base64keystore>
                </keystore>
                <postscript>
                    <pathname>/ericsson/ERICcendiothinlinc_CXP9031953/scripts/control_thinlinc_services.sh</pathname>
                </postscript>
                <oncheckresult>
                    <actionlist>
                        <checkcause>certificateUpdate</checkcause>
                        <checkcause>trustUpdate</checkcause>
                        <action>RunScript</action>
                        <command>
                            <pathname>/ericsson/ERICcendiothinlinc_CXP9031953/scripts/control_thinlinc_services.sh</pathname>
                        </command>
                    </actionlist>
                </oncheckresult>
            </certificate>
        </certificates>
        <crlupdatemode>CrlRequired</crlupdatemode>
    </application>
    <user>
        <username>root</username>
        <usergroup>root</usergroup>
    </user>
</applications>