<?xml version="1.0" encoding="UTF-8"?>
<applications xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="CertificateRequest.xsd">
    <application>
        <certificates>
            <certificate>
                <certificatechain>true</certificatechain>
                <tbscertificate>
                    <subject>
                        <entityname>COM_AA_SERVICE_BIS##hostname##</entityname>
                    </subject>
                    <certificateextension>
                        <subjectalternativename>
                                <ipaddress>##ipv4##</ipaddress>
                                <ipaddress>##ipv6##</ipaddress>
                                <ipaddress>##ipv4_fallback##</ipaddress>
                                <ipaddress>##ipv6_fallback##</ipaddress>
                        </subjectalternativename>
                    </certificateextension>
                </tbscertificate>
                <endentityprofilename>ENM_COMAA_EP</endentityprofilename>
                <keypair>
                    <keypairsize>2048</keypairsize>
                    <keypairalgorithm>RSA</keypairalgorithm>
                </keypair>
                <keystore>
                    <jkskeystore>
                        <storealias>com-aa-service-cert</storealias>
			<storelocation>/opt/ericsson/com.ericsson.oss.services.security.accesscontrol.com-aa-service/keystore</storelocation>
                        <storepassword>passw0rd</storepassword>
                    </jkskeystore>
                </keystore>
                <truststore>
                    <jkstruststore>
                        <storealias>ca-cert</storealias>
			<storelocation>/opt/ericsson/com.ericsson.oss.services.security.accesscontrol.com-aa-service/truststore</storelocation>
                        <storepassword>passw0rd</storepassword>
                    </jkstruststore>
                </truststore>
                <oncheckresult>
                    <actionlist>
                        <checkcause>certificateUpdate</checkcause>
                        <checkcause>trustUpdate</checkcause>
                        <action>VMRestart</action>
                    </actionlist>
                </oncheckresult>
            </certificate>
        </certificates>
        <crlupdatemode>CrlNotManaged</crlupdatemode>
        <keyrequests/>
    </application>
    <user>
        <username>root</username>
        <usergroup>root</usergroup>
    </user>
</applications>
