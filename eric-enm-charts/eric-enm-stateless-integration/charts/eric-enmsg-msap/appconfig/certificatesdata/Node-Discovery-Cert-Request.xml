<?xml version="1.0" encoding="UTF-8"?>
<applications xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="CertificateRequest.xsd">
    <application>
        <certificates>
            <certificate>
                <certificatechain>true</certificatechain>
                <tbscertificate>
                    <subject>
                        <entityname>##hostname##_NodeDiscoveryService</entityname>
                        <distinguishname>CN=##hostname##_NodeDiscoveryService</distinguishname>
                    </subject>
                </tbscertificate>
                <endentityprofilename>ENM_System_SBI_TPFC_EK_EP</endentityprofilename>
                <keystore>
                    <jkskeystore>
                        <storealias>server-cert</storealias>
                        <storelocation>/ericsson/nodediscovery/data/certs/nodediscoverykey.jks</storelocation>
                        <storepassword>nodediscovery</storepassword>
                    </jkskeystore>
                </keystore>
                <truststore>
                    <jkstruststore>
                        <storealias>enm_management_ca</storealias>
                        <storelocation>/ericsson/nodediscovery/data/certs/nodediscoverytrust.jks</storelocation>
                        <storepassword>nodediscovery</storepassword>
                    </jkstruststore>
                </truststore>
                <oncheckresult>
                    <actionlist>
                        <checkcause>certificateUpdate</checkcause>
                        <checkcause>trustUpdate</checkcause>
                        <action>VMRestart</action>
                    </actionlist>
                </oncheckresult>
            </certificate>
        </certificates>
        <crlupdatemode>CrlRequired</crlupdatemode>
    </application>
    <user>
        <!-- keep in the same line to allow grep researches -->
        <username>jboss_user</username>
        <usergroup>jboss</usergroup>
    </user>
</applications>
