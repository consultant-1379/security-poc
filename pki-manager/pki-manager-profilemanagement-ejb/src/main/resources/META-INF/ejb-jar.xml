<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
			http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
	version="3.0">
	<interceptors>
		<interceptor>
			<interceptor-class>com.ericsson.oss.itpf.sdk.context.core.interceptor.EJBCallInterceptor</interceptor-class>
		</interceptor>
	</interceptors>
	<assembly-descriptor>
	<interceptor-binding>
			<ejb-name>*</ejb-name>
			<interceptor-class>com.ericsson.oss.itpf.sdk.context.core.interceptor.EJBCallInterceptor</interceptor-class>
		</interceptor-binding>
		<application-exception>
			<exception-class>java.lang.IllegalArgumentException</exception-class>
			<rollback>true</rollback>
		</application-exception>
		<application-exception>
			<exception-class>javax.persistence.PersistenceException</exception-class>
			<rollback>true</rollback>
		</application-exception>
		<application-exception>
			<exception-class>java.lang.NullPointerException</exception-class>
			<rollback>true</rollback>
		</application-exception>
		<application-exception>
            <exception-class>com.ericsson.oss.itpf.sdk.security.accesscontrol.SecurityViolationException</exception-class>
            <rollback>true</rollback>
        </application-exception>
	</assembly-descriptor>
</ejb-jar>