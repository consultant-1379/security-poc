<?xml version="1.0" encoding="UTF-8"?>
<applications xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="CertificateRequest.xsd">
	<application>
		<certificates>
			<certificate>
				<certificatechain>true</certificatechain>
				<tbscertificate>
			    		<subject>
						<entityname>##hostname##_Simple_Service</entityname>
						<distinguishname>CN=##hostname##_Simple_Service</distinguishname>
					</subject>
				</tbscertificate>
				<endentityprofilename>CMPRA_FCTP_2_EP</endentityprofilename>
				<keypair>
					<keypairsize>2048</keypairsize>
					<keypairalgorithm>RSA</keypairalgorithm>
				</keypair>
				<keystore>
					<base64keystore>
					<storealias>CERTS</storealias>
					<keyfilelocation>/ericsson/simpleservice/data/certs/SimpleServiceKeyStore.pem</keyfilelocation>
					<certificatefilelocation>/ericsson/simpleservice/data/certs/SimpleServiceCertStore.pem</certificatefilelocation>
					<storepassword>Password</storepassword>
					</base64keystore>
				</keystore>
				<truststore>
					<trustsource>both</trustsource>
					<base64truststore>
					<storealias>TRUSTS</storealias>
					<storelocation>/ericsson/simpleservice/data/certs/SimpleServiceTrustStore.pem</storelocation>
					<storepassword>Password</storepassword>
					</base64truststore>
				</truststore>
				<crlstore>
					<base64crlstore>
					<storealias>CMPCRL</storealias>
					<storefolder>/ericsson/simpleservice/data/crls/CMP_CRLStore</storefolder>
					</base64crlstore>
				</crlstore>
			</certificate>
		</certificates>
		<crlupdatemode>CrlRequired</crlupdatemode>
	</application>
	<user>
		<username>root</username>
		<usergroup>root</usergroup>
	</user>
</applications>
