<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>pki-ra-cmp</artifactId>
		<groupId>com.ericsson.oss.itpf.poc.security</groupId>
		<version>1.0.3-SNAPSHOT</version>
	</parent>
	<artifactId>ERICpkiracmp_CXP9031945</artifactId>
	<name>[${project.parent.artifactId}] RPM module</name>
	<packaging>${rpm.packaging}</packaging>
	<properties>
		<com.ericsson.oss.rpm.architecture>noarch</com.ericsson.oss.rpm.architecture>
		<!-- Install path = /${rpm-root}/${comp-name}/${install-path} -->
		<rpm-root>opt</rpm-root>
		<comp-name>ericsson</comp-name>
		<install-path>ERICpkiracmp</install-path>
		<publish_artifact>true</publish_artifact>
		<conf-name>conf</conf-name>
		<media.category>service</media.category>
		<consolidated.jacoco.path>${project.basedir}/../target/jacoco.exec</consolidated.jacoco.path>
	</properties>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>${project.parent.artifactId}-ear</artifactId>
			<version>${project.version}</version>
			<type>ear</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<skip>true</skip>
					<inherited>true</inherited>
					<copyright>2015 Ericsson AB All rights reserved</copyright>
					<description>${ericsson.rstate}</description>
					<group>ERI-NMS</group>
					<vendor>Ericsson AB</vendor>
					<url>www.ericsson.com</url>
					<mappings>
						<mapping>
							<directory>/${rpm-root}/${comp-name}/${install-path}/${conf-name}</directory>
							<filemode>775</filemode>
							<username>${jboss-username}</username>
							<groupname>${jboss-groupname}</groupname>
							<configuration>true</configuration>
							<sources>
								<source>
									<location>src/main/resources/</location>
									<includes>
										<include>CMPRA.xml</include>
									</includes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${vm.install-path}</directory>
							<filemode>775</filemode>
							<username>${jboss-username}</username>
							<groupname>${jboss-groupname}</groupname>
							<directoryIncluded>false</directoryIncluded>
							<recurseDirectories>false</recurseDirectories>
							<configuration>true</configuration>
							<dependency>
								<includes>
									<include>${project.groupId}:${project.parent.artifactId}-ear</include>
								</includes>
							</dependency>
						</mapping>
						<mapping>
							<directory>/${rpm-root}/${comp-name}/${install-path}</directory>
							<filemode>775</filemode>
							<username>${jboss-username}</username>
							<groupname>${jboss-groupname}</groupname>
							<sources>
								<source>
									<location>src/main/scripts/preinstall.sh</location>
								</source>
								<source>
									<location>src/main/scripts/postinstall.sh</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${vm.jboss-install-path}/bin/pre-start-with-exit</directory>
							<filemode>770</filemode>
							<username>${jboss-username}</username>
							<groupname>${jboss-groupname}</groupname>
							<configuration>false</configuration>
							<directoryIncluded>false</directoryIncluded>
							<recurseDirectories>false</recurseDirectories>
							<sources>
								<source>
									<location>src/main/scripts/pre-start</location>
									<includes>
										<include>create-cmp-vault.sh</include>
									</includes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${vm.jboss-install-path}/bin/post-start</directory>
							<filemode>770</filemode>
							<username>${jboss-username}</username>
							<groupname>${jboss-groupname}</groupname>
							<configuration>false</configuration>
							<directoryIncluded>false</directoryIncluded>
							<recurseDirectories>false</recurseDirectories>
							<sources>
								<source>
									<location>src/main/scripts/post-start</location>
									<includes>
										<include>remove-cmp-vault-script.sh</include>
									</includes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${vm.jboss-install-path}/bin/cli/services/</directory>
							<filemode>770</filemode>
							<username>${jboss-username}</username>
							<groupname>${jboss-groupname}</groupname>
							<configuration>false</configuration>
							<directoryIncluded>false</directoryIncluded>
							<recurseDirectories>false</recurseDirectories>
							<sources>
								<source>
									<location>src/main/resources/cli/scripts</location>
									<includes>
										<include>create_vault_01_as_core_service.cli</include>
									</includes>
								</source>
							</sources>
						</mapping>
					</mappings>
					<preinstallScriptlet>
						<scriptFile>src/main/scripts/preinstall.sh</scriptFile>
						<fileEncoding>utf-8</fileEncoding>
					</preinstallScriptlet>
					<postinstallScriptlet>
						<scriptFile>src/main/scripts/postinstall.sh</scriptFile>
						<fileEncoding>utf-8</fileEncoding>
					</postinstallScriptlet>
				</configuration>

			</plugin>
		</plugins>
	</build>
</project>
